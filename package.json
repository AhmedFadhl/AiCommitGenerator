{
  "name": "aj-ai-commit-generator",
  "displayName": "(AJ) AI Commit Generator Pro",
  "description": "Generate semantic Git commit messages with issue tracking using AI (Gemini, OpenAI, or OpenRouter)",
  "version": "2.0.0",
  "publisher": "AhmedFadhlAJ",
  "icon": "resources/aj-logo.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AhmedFadhl/AiCommitGenerator.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "SCM Providers",
    "Machine Learning",
    "Issue Tracking"
  ],
  "activationEvents": [
    "onCommand:ai-commit-generator.generateCommitMessage",
    "onView:scm"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-commit-generator.generateCommitMessage",
        "title": "Generate AI Commit Message with Issue Tracking",
        "icon": "$(sparkle)"
      },
      {
        "command": "ai-commit-generator.createIssueFromChanges",
        "title": "Create Issue from Changes",
        "icon": "$(issue)"
      }
    ],
    "configuration": {
      "title": "AI Commit Generator Pro",
      "properties": {
        "aiCommitGenerator.provider": {
          "type": "string",
          "default": "gemini",
          "enum": [
            "gemini",
            "openai",
            "openrouter"
          ],
          "description": "AI provider to use for commit message generation."
        },
        "aiCommitGenerator.geminiModel": {
          "type": "string",
          "default": "gemini-3-flash-preview",
          "enum": [
            "gemini-2.0-flash",
            "gemini-2.5-flash",
            "gemini-2.5-flash-lite",
            "gemini-2.5-pro",
            "gemini-3-flash-preview",
            "gemini-1.5-pro"
          ],
          "description": "Gemini model to use."
        },
        "aiCommitGenerator.openaiModel": {
          "type": "string",
          "default": "gpt-4o-mini",
          "enum": [
            "gpt-4o-mini",
            "gpt-4o",
            "gpt-3.5-turbo"
          ],
          "description": "OpenAI model to use."
        },
        "aiCommitGenerator.openrouterModel": {
          "type": "string",
          "default": "qwen/qwen3-coder:free",
          "enum": [
            "qwen/qwen3-coder:free",
            "openai/gpt-oss-20b:free",
            "nvidia/nemotron-nano-9b-v2:free",
            "alibaba/tongyi-deepresearch-30b-a3b:free",
            "amazon/nova-2-lite-v1:free",
            "mistralai/devstral-2512:free",
            "openai/gpt-oss-120b:free"
          ],
          "description": "OpenRouter model to use."
        },
        "aiCommitGenerator.apiKey": {
          "type": "string",
          "description": "API key for the selected AI provider (Gemini, OpenAI, or OpenRouter). ⚠️ Do not share or commit this key!"
        },
        "aiCommitGenerator.issueTracker": {
          "type": "string",
          "default": "none",
          "enum": [
            "none",
            "github",
            "gitlab",
            "jira",
            "linear"
          ],
          "description": "Issue tracker to integrate with. Set to 'none' to disable issue tracking."
        },
        "aiCommitGenerator.issueTrackerUrl": {
          "type": "string",
          "description": "Base URL for issue tracker (e.g., https://github.com/owner/repo, https://your-company.atlassian.net)"
        },
        "aiCommitGenerator.issueTrackerToken": {
          "type": "string",
          "description": "API token/password for issue tracker authentication"
        },
        "aiCommitGenerator.issueTrackerUsername": {
          "type": "string",
          "description": "Username/email for issue tracker authentication (for Jira)"
        },
        "aiCommitGenerator.issueTrackerProject": {
          "type": "string",
          "description": "Project key/identifier (for Jira/Linear)"
        },
        "aiCommitGenerator.autoCreateIssues": {
          "type": "boolean",
          "default": true,
          "description": "Automatically create issues when none are found"
        },
        "aiCommitGenerator.issueLabels": {
          "type": "array",
          "default": [
            "enhancement",
            "bug",
            "chore"
          ],
          "description": "Default labels for auto-created issues"
        },
        "aiCommitGenerator.defaultIssueType": {
          "type": "string",
          "default": "Task",
          "description": "Default issue type (for Jira/Linear)"
        },
        "aiCommitGenerator.commitFormat": {
          "type": "string",
          "default": "conventional",
          "enum": [
            "conventional",
            "simple",
            "smart"
          ],
          "description": "Format for commit messages"
        },
        "aiCommitGenerator.includeIssueInCommit": {
          "type": "boolean",
          "default": true,
          "description": "Include issue reference in commit message"
        }
      }
    },
    "menus": {
      "scm/title": [
        {
          "command": "ai-commit-generator.generateCommitMessage",
          "when": "scmProvider == git",
          "group": "navigation"
        },
        {
          "command": "ai-commit-generator.createIssueFromChanges",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ],
      "scm/sourceControl": [
        {
          "command": "ai-commit-generator.generateCommitMessage",
          "group": "9_cutcopypaste@2"
        }
      ]
    }
  },
  "keybindings": [
    {
      "command": "ai-commit-generator.generateCommitMessage",
      "key": "ctrl+alt+c",
      "mac": "cmd+shift+c",
      "when": "gitState != detached"
    },
    {
      "command": "ai-commit-generator.createIssueFromChanges",
      "key": "ctrl+alt+i",
      "mac": "cmd+shift+i",
      "when": "gitState != detached"
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src --ext ts",
    "test": "echo \"No tests yet\""
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "https-proxy-agent": "^7.0.6",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.130",
    "@types/node-fetch": "^2.6.7",
    "@types/vscode": "1.85",
    "esbuild": "^0.27.2",
    "eslint": "^8.57.1",
    "typescript": "^5.9.3"
  }
}
